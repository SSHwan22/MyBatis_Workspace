<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="boardMapper">
	<resultMap type="board" id="boardResultSet">
		<result column="BOARD_NO" property="boardNo"/>
		<result column="BOARD_TITLE" property="boardTitle"/>
		<result column="BOARD_CONTENT" property="boardContent"/>
		<result column="BOARD_WRITER" property="boardWriter"/>
		<result column="COUNT" property="count"/>
		<result column="CREATE_DATE" property="createDate"/>
		<result column="STASTUS" property="status"/>
		
	</resultMap>
	<select id="selectListCount" resultType="_int" resultMap="boardResultSet">
		SELECT COUNT(*) FROM BOARD WHERE STATUS = 'Y'
	</select>
	<select id="selectList" resultType="arraylist" resultMap="boardResultSet">
		SELECT * FROM BOARD WHERE STATUS = 'Y'
	</select>
</mapper>